@charset "utf-8";

html,body {width:100%; height:100%;}
#dots-wrap {width:100%; height:100%;}

.dots-side-menu {width:320px; border-right:1px solid #EEEEEE; height:100%;}
#dsm .logo-wrap {height:51px; border-bottom:1px solid #EEEEEE;}
#dsm .logo-wrap .logo {display:inline-block; margin-top:15px; margin-left:30px;}
#dsm .search-box {padding:9px 10px;}
#dsm .search-box .search {display:inline-flex; background:#FBFBFB; width:100%; height:40px; border-radius:5px; overflow:hidden;}
#dsm .search-box .search button {border:none; outline:none; background:none; width:45px;}
#dsm .search-box .search button svg {stroke-width: 2; width:20px; height:20px;}
#dsm .search-box .search input {border:none; outline:none; background:none; font-size:14px; width:100%;}
#dsm .search-box .search input::placeholder {color:#AAAAAA;}

#dsm .fixed-menu {border-bottom:1px solid #EEEEEE; padding-bottom:12px;}
#dsm .fixed-menu ul {}
#dsm .fixed-menu ul li {height:45px; display:inline-flex; width:100%; align-items: center; justify-content: flex-start; padding-left:27px; cursor:pointer;}
#dsm .fixed-menu ul li span.ic {position:relative;}
#dsm .fixed-menu ul li span.ic svg {stroke-width: 1.5; width:20px; height:auto; color:#444444;}
#dsm .fixed-menu ul li span.text {margin-left:10px; color:#444444; font-size:15px; font-weight:500;}
#dsm .fixed-menu ul li span.ic em.indicator {position:absolute; right:-4px; top:-1px; background:#E10000; border-radius:50%; width:5px; height:5px;}

#dsm .variety-menu {border-bottom:1px solid #EEEEEE; padding-bottom:12px;}
#dsm .variety-menu ul {}
#dsm .variety-menu ul li {}
#dsm .variety-menu ul li .parent-menu {height:45px; display:inline-flex; width:100%; align-items: center; justify-content: flex-start; padding-left:27px; cursor:pointer; position:relative;}
#dsm .variety-menu ul li.has-depth .parent-menu::after {content:""; width:11px; height:6px; background:url("da-arrow.png") center center / contain no-repeat; position:absolute; right:18px; top:18px;}
#dsm .variety-menu ul li span.ic {position:relative;}
#dsm .variety-menu ul li span.ic svg {stroke-width: 1.5; width:20px; height:auto; color:#444444;}
#dsm .variety-menu ul li span.text {margin-left:10px; color:#444444; font-size:15px; font-weight:500;}
#dsm .variety-menu ul li span.ic em.indicator {position:absolute; right:-4px; top:-2px; background:#E10000; border-radius:50%; width:5px; height:5px;}
#dsm .variety-menu ul li .child-menu ul li {height:40px; display:inline-flex; width:100%; align-items: center; justify-content: flex-start; padding-left:27px; cursor:pointer; position:relative;}
#dsm .variety-menu ul li .child-menu ul li.active {background:rgb(42 85 255 / 2%);}
#dsm .variety-menu ul li .child-menu ul li.active::before {content:""; position:absolute; left:0; top:0; width:5px; height:100%; background:#2A55FF;}

#dsm .variety-menu ul li.active .parent-menu span.text {color:#2A55FF;}
#dsm .variety-menu ul li.active .parent-menu span.ic svg {color:#2A55FF;}